﻿@using Sm2.Models
@model List<Member>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">TEAM MEMBERS</h4>
                <a asp-action="create" class="btn btn-success">Add Member</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Job
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Member members in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        <img src="@members.Image" alt="image" />
                                    </td>
                                    <td>
                                        @members.Name
                                    </td>
                                    <td>
                                        @members.Title
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@members.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="detail" asp-route-id="@members.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="delete" asp-route-id="@members.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>